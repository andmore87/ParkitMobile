<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.andmore.parkitmobile.activity.ConfirmReserveActivity" >

    <ImageView
        android:id="@+id/imgRowLogoParkConf"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/txtReserveTitleParkConf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/imgRowLogoParkConf"
        android:text="Los Molinos"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/red"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imgRowLogoPlantConf"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imgRowLogoParkConf"
        android:layout_gravity="center"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/txtReserveTitlePlantConf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgRowLogoParkConf"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/imgRowLogoPlantConf"
        android:text="Planta 1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/red"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/imgRowLogoNodoConf"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imgRowLogoPlantConf"
        android:layout_gravity="center"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/txtReserveTitleNodoConf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgRowLogoPlantConf"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/imgRowLogoNodoConf"
        android:text="Seccion Verde"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/red"
        android:textSize="15dp" />

    <View
        android:id="@+id/viewFirstConf"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/txtReserveTitleNodoConf"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/drop_shadow" >
    </View>

    <TextView
        android:id="@+id/txtPlaceReserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/viewFirstConf"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/imgLogoNodo"
        android:text="Reservado en:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtPlaceReserveValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewFirstConf"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/txtPlaceReserve"
        android:text="Plaza #45"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/navy"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtDateftReserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtPlaceReserveValue"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/imgLogoNodo"
        android:text="Fecha de Ingreso:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtDateftReserveValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPlaceReserveValue"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/txtPlaceReserve"
        android:text="17-08-2014"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/navy"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtTimeFtReserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtDateftReserveValue"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/imgLogoNodo"
        android:text="Hora de Ingreso:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtTimeFtReserveValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDateftReserveValue"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/txtPlaceReserve"
        android:text="01:30 PM"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/navy"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtTimeEndReserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtTimeFtReserveValue"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/imgLogoNodo"
        android:text="Hora de Salida:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtTimeEndReserveValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTimeFtReserveValue"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/txtPlaceReserve"
        android:text="02:30 PM"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/navy"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtFormatPayReserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtTimeEndReserveValue"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/imgLogoNodo"
        android:text="Formato de Pago:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtFormatPayReserveValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTimeEndReserveValue"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/txtPlaceReserve"
        android:text="Electronico"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/navy"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtStateReserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtFormatPayReserveValue"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/imgLogoNodo"
        android:text="Estado:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtStateReserveValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFormatPayReserveValue"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/txtPlaceReserve"
        android:text="RESERVADO"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/red"
        android:textSize="18dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/viewSegConf"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/txtStateReserveValue"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/drop_shadow" >
    </View>

    <CheckBox
        android:id="@+id/chkPrintTiquet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewSegConf"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:textColor="@color/black"
        android:text="Generar Tiquet" />

    <RelativeLayout
        android:id="@+id/lyMapsReserve"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/chkPrintTiquet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dip"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/img_findcar"
            android:layout_width="75.0dp"
            android:layout_height="75.0dp"
            android:layout_marginTop="-65dip"
            android:background="@drawable/roundstylebutton"
            android:gravity="center"
            android:src="@drawable/icon_availablebig" />

        <TextView
            android:id="@+id/txt_mapss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_findcar"
            android:layout_centerInParent="true"
            android:text="localizar plaza"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#ff6e7f81"
            android:textStyle="bold|italic" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_msgAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="-60dip"
        android:layout_below="@+id/lyMapsReserve"
        android:text="Te plaza estarÃ¡ reservada duranto 30 minutos antes de tu llegada"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#ff6e7f81"
        android:textStyle="bold|italic" />

</RelativeLayout>