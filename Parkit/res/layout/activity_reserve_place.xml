<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.andmore.parkitmobile.activity.ReservePlaceActivity" >

    <ImageView
        android:id="@+id/imgRowLogoParking"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/arrow" />

    <ImageView
        android:id="@+id/imgLogoParking"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_rounded_corners"
        android:src="@drawable/losmolinos" />

    <TextView
        android:id="@+id/txtReserveTitleParking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imgLogoParking"
        android:text="Los Molinos"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imgRowLogoPlant"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/arrow" />

    <ImageView
        android:id="@+id/imgLogoPlant"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imgLogoParking"
        android:layout_gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/edittext_rounded_corners"
        android:src="@drawable/ic_people" />

    <TextView
        android:id="@+id/txtReserveTitlePlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogoParking"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/imgLogoPlant"
        android:text="Planta 1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/imgRowLogoNodo"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/arrow" />

    <ImageView
        android:id="@+id/imgLogoNodo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imgLogoPlant"
        android:layout_gravity="center"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/edittext_rounded_corners"
        android:src="@drawable/ic_photos" />

    <TextView
        android:id="@+id/txtReserveTitleNodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogoPlant"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/imgLogoNodo"
        android:text="Seccion Verde"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <View
        android:id="@+id/viewFirst"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/imgLogoNodo"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/drop_shadow" >
    </View>

    <EditText
        android:id="@+id/btnPickFtDate"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/viewFirst"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dip"
        android:background="@drawable/edittext_rounded_corners"
        android:clickable="true"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:ems="11"
        android:gravity="center"
        android:hint="Fecha Ingreso"
        android:inputType="none"
        android:singleLine="true"
        android:textColorHint="@color/black" >
    </EditText>

    <EditText
        android:id="@+id/btnPickFtTime"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/viewFirst"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/btnPickFtDate"
        android:background="@drawable/edittext_rounded_corners"
        android:clickable="true"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:hint="Hora Ingreso"
        android:inputType="none"
        android:singleLine="true"
        android:textColorHint="@color/black" >
    </EditText>

    <EditText
        android:id="@+id/btnPickEndDate"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnPickFtTime"
        android:layout_marginTop="20dip"
        android:background="@drawable/edittext_rounded_corners"
        android:clickable="true"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:hint="Fecha Salida"
        android:inputType="none"
        android:singleLine="true"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/btnPickEndTime"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnPickFtTime"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dip"
        android:layout_toRightOf="@+id/btnPickFtDate"
        android:background="@drawable/edittext_rounded_corners"
        android:clickable="true"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:ems="11"
        android:gravity="center"
        android:hint="Hora Salida"
        android:inputType="none"
        android:singleLine="true"
        android:textColorHint="@color/black" >
    </EditText>

    <View
        android:id="@+id/viewSec"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/btnPickEndDate"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/drop_shadow" >
    </View>

    <TextView
        android:id="@+id/txtReserveTitlePayFormat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewSec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="Formato de Pago"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/red"
        android:textSize="20dp" />

    <Button
        android:id="@+id/pay_elect_link"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtReserveTitlePayFormat"
        android:layout_gravity="center"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:drawableRight="@drawable/circlerow"
        android:text="Electronico"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/navy"
        android:textSize="15sp" />

    <Button
        android:id="@+id/pay_cash_link"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtReserveTitlePayFormat"
        android:layout_gravity="center"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/pay_elect_link"
        android:background="@null"
        android:drawableRight="@drawable/circlerow"
        android:text="Efectivo"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/navy"
        android:textSize="15sp" />

    <FrameLayout
        android:id="@+id/wallet_button_holder"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/txtInfoReserTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_elect_link"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Te reservamos la plaza por 30 minutos!!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/txtInfoReserTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_home_footer" />

</RelativeLayout>